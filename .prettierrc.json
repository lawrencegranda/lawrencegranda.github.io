{
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "proseWrap": "never",
        "trailingComma": "none"
      }
    },
    {
      "files": "*.html",
      "options": {
        "htmlWhitespaceSensitivity": "ignore",
        "printWidth": 120,
        "tabWidth": 4,
        "singleAttributePerLine": false
      }
    },
    {
      "files": "*.yml",
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
